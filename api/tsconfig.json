{
  "compilerOptions": {
    "target": "es2018",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es2018", "esnext.asynciterable"],
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "*": ["./src/*"],
      "tests/*": ["./tests/*"]
    }
  }
}
